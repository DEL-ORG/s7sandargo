version: '3.5'
services:
  web:
    image: python:3.8
    volumes:
      - ./app:/app
    ports:
      - "5000:5000"
    environment:
      FLASK_APP: app.py
      FLASK_RUN_HOST: 0.0.0.0
    command: bash -c "pip install -r requirements.txt && flask run"

  redis:
    image: "redis:alpine"

volumes:
  data:
