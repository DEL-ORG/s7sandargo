apiVersion: apps/v1
kind: Deployment
metadata:
  name: my-app-deployment
  labels:
    app: my-app
spec:
  replicas: 2
  selector:
    matchLabels:
      app: my-app
  template:
    metadata:
      labels:
        app: my-app
    spec:
      containers:
      - name: my-app-container
        image: my-image:latest
        ports:
        - containerPort: 80
        env:
        - name: ENVIRONMENT_VARIABLE_1
          value: value1
        - name: ENVIRONMENT_VARIABLE_2
          value: value2
